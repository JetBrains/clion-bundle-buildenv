pkgname=expat
pkgver=2.7.1
pkgrel=1
pkgdesc='An XML parser library'
arch=(aarch64 x86_64)
url='http://expat.sourceforge.net/'
license=(custom)
#depends=(glibc)
source=(https://github.com/libexpat/libexpat/releases/download/R_$(echo $pkgver | tr . _)/$pkgname-$pkgver.tar.gz)
sha256sums=('0cce2e6e69b327fc607b8ff264f4b66bdf71ead55a87ffd5f3143f535f15cfa2')
options=('!staticlibs')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=${PREFIX} \
    --enable-shared \
    --disable-static
  make
}

check() {
  make -C $pkgname-$pkgver check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="${pkgdir}" install
  install -Dm644 COPYING "${pkgdir}${PREFIX}/share/licenses/$pkgname/COPYING"
}
